---
import { Image } from '@astrojs/image/components';
---

<header
  class="container flex items-center justify-between text-black relative z-[2]"
>
  <div
    class="flex h-[104px] lg:w-[91px] w-24 justify-center pb-[25px] pt-[18px]"
  >
    <Image
      src="/images/logoRoxa.png"
      loading="eager"
      format="webp"
      alt="Logo RD Medicine"
      width={92}
      height={92}
      class="inline-block h-[91px] w-[100px] align-middle"
    />
  </div>
  <nav class="flex gap-x-14 lg:gap-x-6 text-sm relative">
    <button id="menu-button" class="lg:hidden flex gap-x-2 items-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
      >
        <path
          d="M18 10H6M21 6H3M21 14H3M18 18H6"
          stroke="white"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
      <span class="pt-BR">Menu</span>
    </button>
    <ul
      class="flex-col w-[340px] lg:w-[unset] top-16 absolute bg-white lg:bg-transparent text-black lg:text-black right-1 lg:static lg:flex-row hidden capitalize lg:flex rounded-lg lg:rounded-none shadow-2xl lg:shadow-none pt-[18px] items-center"
    >
      <a href="#features">
        <li class="p-6">
          <span class="pt-BR">diferenciais</span>
        </li>
      </a>
      <a href="#team">
        <li class="p-6">
          <span class="pt-BR">nossa equipe</span>
        </li>
      </a>
      <a href="#training">
        <li class="p-6">
          <span class="pt-BR">nossos Tratamentos</span>
        </li>
      </a>
      <a href="#about">
        <li class="p-6">
          <span class="pt-BR">sobre a Est√©tica</span>
        </li>
      </a>
      <li class="p-6 lg:py-6 lg:px-0 xl:p-6">
        <a
          class="rounded-[70px] border-[2px] lg:border-white border-[#203DE2] lg:text-black text-[#203DE2] py-3 px-12 md:px-14 text-sm leading-6"
          href="https://rdmedicine.cademi.com.br/"
          rel="noopener noreferrer"
          target="_blank"
        >
          <span class="pt-BR">Contato</span>
        </a>
      </li>
    </ul>
  </nav>
</header>
<script>
  const menuButton = document.querySelector('#menu-button')!;
  const menu = document.querySelector('#menu-button + ul')!;

  window.addEventListener('click', () => {
    menu.classList.add('hidden');
  });

  menuButton.addEventListener('click', (event) => {
    menu.classList.toggle('hidden');
    event.stopPropagation();
  });
</script>
