---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Benefits from '../components/Benefits.astro';
import Team from '../components/Team.astro';
import Trainings from '../components/Training';
import About from '../components/About.astro';
import Invite from '../components/InviteSection.astro';
import BackgroundVideo from '../components/BackgroundVideo.astro';
---

<Layout title="RD Medicine">
  <Header />
  <BackgroundVideo />
  <main class="w-full">
    <Hero />
    <Benefits />
    <Team />
    <Trainings client:visible />
    <About />
    <Invite />
  </main>
  <Footer />
  <button
    id="btn-lang"
    class="fixed right-4 bottom-4 bg-black w-20 h-20 z-[10]"
  >
    troca lingua
  </button>
</Layout>
